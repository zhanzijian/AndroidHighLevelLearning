<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EsPathActivity">

    <com.example.viewapplication.view.EsPathView
        android:id="@+id/path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.example.viewapplication.view.AcCircleElement
        android:id="@+id/pv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:acIcon="@mipmap/icon_power"
        app:acPowerText="10.00kW"
        app:cardCornerRadius="40dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="@id/path"
        app:layout_constraintTop_toTopOf="@id/path"
        app:rippleColor="@color/gray_33_99_color" />

    <com.example.viewapplication.view.AcCircleElement
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:acIcon="@mipmap/icon_battery_work"
        app:acPowerText="10.00kW"
        app:cardCornerRadius="40dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="@id/path"
        app:layout_constraintStart_toStartOf="@id/path"
        app:rippleColor="@color/gray_33_99_color" />

    <com.example.viewapplication.view.AcCircleElement
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:acIcon="@mipmap/icon_psum"
        app:acPowerText="10.00kW"
        app:cardCornerRadius="40dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="@id/path"
        app:layout_constraintTop_toTopOf="@id/path"
        app:rippleColor="@color/gray_33_99_color" />

    <com.example.viewapplication.view.AcCircleElement
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:acIcon="@mipmap/icon_family_load_power"
        app:acPowerText="10.00kW"
        app:cardCornerRadius="40dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="@id/path"
        app:layout_constraintEnd_toEndOf="@id/path"
        app:rippleColor="@color/gray_33_99_color" />

    <com.example.viewapplication.view.AcCircleElement
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:acIcon="@mipmap/icon_family_load_power"
        app:acPowerText="10.00kW"
        app:cardCornerRadius="40dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="@id/path"
        app:layout_constraintTop_toTopOf="@id/path"
        app:layout_constraintBottom_toBottomOf="@id/path"
        android:layout_marginBottom="65dp"
        app:rippleColor="@color/gray_33_99_color" />

    <com.example.viewapplication.view.AcCircleElement
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:acIcon="@mipmap/icon_inverter"
        app:acShowPowerText="false"
        app:cardCornerRadius="40dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="@id/path"
        app:layout_constraintEnd_toEndOf="@id/path"
        app:layout_constraintStart_toStartOf="@id/path"
        app:layout_constraintTop_toTopOf="@id/path"
        app:rippleColor="@color/gray_33_99_color" />

    <Button
        android:id="@+id/start1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开启动画1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/end1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/start1"
        app:layout_constraintTop_toTopOf="parent"
        android:text="结束动画1" />

    <Button
        android:id="@+id/start2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/start1"
        app:layout_constraintStart_toStartOf="@id/start1"
        android:text="开启动画2" />

    <Button
        android:id="@+id/end2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/start1"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/start2"
        app:layout_constraintTop_toTopOf="@id/start2"
        android:text="结束动画2" />


</androidx.constraintlayout.widget.ConstraintLayout>